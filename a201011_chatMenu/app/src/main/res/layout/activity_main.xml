<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/chatBotText"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:text="챗봇을 실행하시려면 위 실행 버튼을 눌러 플러스친구 '수정구'를 추가해주세요."
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kakaoTalkButton"
        app:layout_constraintVertical_bias="0.204" />

    <ImageView
        android:id="@+id/chat_image"
        android:layout_width="250dp"
        android:layout_height="383dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.255"
        tools:srcCompat="@drawable/chat_image" />

    <Button
        android:id="@+id/kakaoTalkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#F7E600"
        android:onClick="kakaoButtonClick"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="카카오톡 실행하기"
        android:textColor="#3C1E1E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_image"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/chatDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신은 어떤 성향이신가요?\n챗봇이 성향에 따라 여행지를 추천해드립니다."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/chat_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />
</androidx.constraintlayout.widget.ConstraintLayout>