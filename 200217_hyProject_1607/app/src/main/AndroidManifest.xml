<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a200116_hyproject">

    <!--Internet permission-->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--location permission-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!--Phone Call permission-->
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <!--SMS permission-->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!--Alarm permission-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!--Profile Picture permission-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera2"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Register Page Profile Settings-->
        <provider
            android:authorities="com.example.a200116_hyproject"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!--Login Page-->
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Register Page-->
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="">
        </activity>

        <!--Find ID Page-->
        <activity
            android:name=".FindIDActivity"
            android:theme="@style/AppTheme"
            android:label="">
        </activity>

        <!--Find PW Page-->
        <activity
            android:name=".FindPWActivity"
            android:theme="@style/AppTheme"
            android:label="">
        </activity>

        <!--Main Page-->
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <!--Current Position Page-->
        <activity
            android:name=".CurPosActivity">
        </activity>

        <!--Alarm Page-->
        <activity
            android:name=".AlarmActivity"
            android:theme="@style/AppTheme"
            android:label="시간을 설정해 주세요">
        </activity>

        <receiver android:name=".AlarmReceiver" />

        <service
            android:name=".RingtoneService"
            android:enabled="true"/>

        <uses-library
        android:name="org.apache.http.legacy"
        android:required="false"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA9YyT9lQIL2MARUVwlIIG7UxRv_n0J35o" />

    </application>

</manifest>